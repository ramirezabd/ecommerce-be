{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
  "overrides": [
    {
      "files": ["*.js", "*.cjs", "*.mjs"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "trailingComma": "all",
        "endOfLine": "auto",
        "singleAttributePerLine": true
      }
    ]
  }
}
